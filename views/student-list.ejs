<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/student-list.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">\
    <script src="moment.js"></script>\
    <script>
      //const dob=moment(student.dob).format('DD/MM/YYYY');
  </script>
    <title>Student list</title>
</head>
<body>
    <%-include("./partials/header.ejs") %>
    <%-include("./partials/logout.ejs") %>
    <a type="button" id="add-record" class="btn btn-primary btn" href="/add-student">Add Record</a>

    <h5>Total <%=total %> students</h5>

    <table id="table">
      <thead>
        <tr>
          <th>Roll no</th>
          <th>Name</th>
          <th>Date of Birth</th>
          <th>Score</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% students.forEach(function(student){ %>
          <tr>
          
            <td><%= student.rollno%></td>
            <td><%= student.name%></td>
            <td><%= student.dob%></td>
            <td><%= student.score%></td>
            <td>
              <a href="/update/<%=student.rollno%>">
                <i class="fa fa-pencil" style="font-size:20px;color:blue;">
              </i>
              </a>
              &emsp;
              <a href="delete/<%=student.rollno%>" 
                  class="fa fa-remove" style="font-size:20px;color:red;">
              </a>
                
            </td>
          </tr>
        <% }); %>  
          
      </tbody>
      </table>
</body>
</html>